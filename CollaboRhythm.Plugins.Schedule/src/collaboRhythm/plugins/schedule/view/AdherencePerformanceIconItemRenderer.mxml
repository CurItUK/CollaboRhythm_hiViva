<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:images="assets.images.*"
				width="100%" height="45">
	<fx:Script><![CDATA[
		import collaboRhythm.plugins.schedule.shared.model.AdherencePerformanceAssertion;

		[Bindable]
		private var _icon:String;

		override public function set data(value:Object):void
		{
			super.data = value;
			_icon = String(value);
		}
		]]></fx:Script>
	<images:thumbsUp visible="{_icon == AdherencePerformanceAssertion.THUMBS_UP}" width="45" height="45"/>
	<images:warning visible="{_icon == AdherencePerformanceAssertion.WARNING}" width="45" height="45"/>
	<images:lightningSmall visible="{_icon == AdherencePerformanceAssertion.LIGHTNING}" width="45" height="45"/>
</s:ItemRenderer>
