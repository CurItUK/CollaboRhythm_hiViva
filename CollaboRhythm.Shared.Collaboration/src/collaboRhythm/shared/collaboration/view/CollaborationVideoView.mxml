		private function determineCollaborationLabelText(collaborationState:String):String
		{
			var collaborationLabelText:String;

			switch (collaborationState)
			{
				case CollaborationModel.INVITATION_SENT:
					collaborationLabelText = "Calling " +
							_collaborationModel.peerAccount.primaryRecord.contact.fullName + "...";
					break;
				case CollaborationModel.INVITATION_RECEIVED:
					collaborationLabelText = "Incoming call from " +
							_collaborationModel.peerAccount.primaryRecord.contact.fullName;
					break;
				case CollaborationModel.INVITATION_REJECTED:
					collaborationLabelText = "Call rejected by " +
							_collaborationModel.peerAccount.primaryRecord.contact.fullName;
					break;
				case CollaborationModel.COLLABORATION_ACTIVE:
					collaborationLabelText = "Collaborating with " +
							_collaborationModel.peerAccount.primaryRecord.contact.fullName;
					break;
			}

			return collaborationLabelText;
		}

