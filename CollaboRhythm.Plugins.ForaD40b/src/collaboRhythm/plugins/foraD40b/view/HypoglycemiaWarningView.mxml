<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="100%">
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";

		.warningText {
			color: #ED1C24;
			fontSize: 40;
		}
	</fx:Style>
	<fx:Script><![CDATA[
		import collaboRhythm.plugins.foraD40b.model.BloodGlucoseHealthActionInputModel;

		[Bindable]
		private var _dataInputModel:BloodGlucoseHealthActionInputModel;

		public function init(dataInputModel:BloodGlucoseHealthActionInputModel):void
		{
			_dataInputModel = dataInputModel;
			bloodGlucoseLabel.text = "Your previous blood glucose (" + _dataInputModel.bloodGlucose + ") was low.";
		}
		]]></fx:Script>
	<s:Label id="bloodGlucoseLabel" styleName="warningText" top="40" horizontalCenter="0"/>
	<s:Label text="If you need help, call 911." styleName="warningText" bottom="20" horizontalCenter="0"/>
</s:Group>
