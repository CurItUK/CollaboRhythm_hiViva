<!--- The default skin class for the Spark CheckBox component.

 @see spark.components.CheckBox

 @langversion 3.0
 @playerversion Flash 10
 @playerversion AIR 1.5
 @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:sharedView="collaboRhythm.plugins.schedule.shared.view.*"
			 alpha.disabledStates="0.5">
	<fx:Metadata>
    <![CDATA[
		/**
		 * @copy spark.skins.spark.ApplicationSkin#hostComponent
		 */
		[HostComponent("spark.components.CheckBox")]
		]]>
    </fx:Metadata>

	<s:states>
		<s:State name="up"/>
		<s:State name="over" stateGroups="overStates"/>
		<s:State name="down" stateGroups="downStates"/>
		<s:State name="disabled" stateGroups="disabledStates"/>
		<s:State name="upAndSelected" stateGroups="selectedStates"/>
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates"/>
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates"/>
		<s:State name="disabledAndSelected" stateGroups="disabledStates, selectedStates"/>
	</s:states>

	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" paddingBottom="0" paddingTop="0" paddingLeft="0" paddingRight="0"/>
	</s:layout>
	<s:Group id="boxGroup" width="56" height="56">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="0xFFFFFF" alpha="0"/>
			</s:fill>
		</s:Rect>

		<s:Group width="50" height="50" horizontalCenter="0" verticalCenter="0">
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="0xD1D3D4"/>
				</s:fill>
			</s:Rect>
			<s:Rect width="100%" height="100%" includeIn="overStates">
				<s:fill>
					<s:SolidColor color="0x6dcaec"/>
				</s:fill>
			</s:Rect>
			<s:Rect width="100%" height="100%" includeIn="downStates">
				<s:fill>
					<s:SolidColor color="0x6dcaec"/>
				</s:fill>
			</s:Rect>
			<s:Rect width="100%" height="100%">
				<s:stroke>
					<s:SolidColorStroke color="0x414042"/>
				</s:stroke>
			</s:Rect>
		</s:Group>

		<sharedView:AdherenceCheck width="56" height="56" horizontalCenter="6" verticalCenter="-6"
								   includeIn="selectedStates"/>
	</s:Group>
	<s:VGroup id="labelGroup" includeInLayout="{hostComponent.label.length > 0}" visible="{hostComponent.label.length > 0}">
		<s:HGroup verticalAlign="baseline">
			<s:Label id="fastingLabel" text="Fasting Blood Glucose" fontSize="18" fontWeight="bold"/>
			<s:Label id="fastingLabel2" text="(first measurement of the day before eating)"/>
		</s:HGroup>
		<s:Label id="labelDisplay"/>
	</s:VGroup>
</s:SparkSkin>