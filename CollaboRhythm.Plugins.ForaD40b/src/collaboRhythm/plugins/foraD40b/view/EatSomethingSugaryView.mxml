<tablet:TabletViewBase xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:tablet="collaboRhythm.shared.view.tablet.*"
					   xmlns:view="collaboRhythm.plugins.foraD40b.view.*"
					   xmlns:sharedView="collaboRhythm.plugins.schedule.shared.view.*"
					   creationComplete="creationCompleteHandler(event)"
					   title="Low Blood Glucose - Eat Something Sugary">
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";

		#okButton {
			fontSize: 40;
		}

		.optionLabel {
			fontSize: 36;
		}

		.orLabel {
			fontSize: 24;
		}

		.warningText {
					color: #ED1C24;
					fontSize: 40;
				}
	</fx:Style>
	<fx:Script><![CDATA[
		import collaboRhythm.plugins.foraD40b.controller.BloodGlucoseHealthActionInputController;
		import collaboRhythm.plugins.foraD40b.model.BloodGlucoseHealthActionInputModel;
		import collaboRhythm.plugins.schedule.shared.model.HealthActionInputModelAndController;

		import mx.events.FlexEvent;

		private var _dataInputController:BloodGlucoseHealthActionInputController;
		[Bindable]
		private var _dataInputModel:BloodGlucoseHealthActionInputModel;

		override public function set data(value:Object):void
		{
			super.data = value;

			var dataInputModelAndController:HealthActionInputModelAndController = HealthActionInputModelAndController(value);

			_dataInputModel = BloodGlucoseHealthActionInputModel(dataInputModelAndController.healthActionInputModel);
			_dataInputController = BloodGlucoseHealthActionInputController(dataInputModelAndController.healthActionInputController);
		}

		private function creationCompleteHandler(event:FlexEvent):void
		{
			hypoglycemiaWarningView.init(_dataInputModel);
		}

		private function okButton_clickHandler():void
		{
			_dataInputController.showRecheckBloodGlucoseTimer();
		}

		private function checkBox_clickHandler(event:MouseEvent):void
		{
			event.target.selected = !(event.target.selected);
		}
		]]></fx:Script>
	<view:HypoglycemiaWarningView id="hypoglycemiaWarningView"/>
	<s:Group width="100%" height="100%">
		<s:VGroup verticalCenter="0" horizontalCenter="0" horizontalAlign="center">
			<s:HGroup verticalAlign="middle">
				<s:Image source="@Embed(source='/assets/images/juice.png')"/>
				<s:Label text="Drink a cup of fruit juice" styleName="optionLabel" width="380"/>
				<s:Group height="100%">
					<sharedView:AdherenceCheckBox id="juiceCheckBox" width="50" height="50" verticalCenter="-5"
											skinClass="collaboRhythm.plugins.schedule.shared.view.AdherenceCheckBoxSkin"
											click="checkBox_clickHandler(event)"/>
				</s:Group>
			</s:HGroup>
			<s:Label text="or" styleName="orLabel"/>
			<s:HGroup verticalAlign="middle">
				<s:Image source="@Embed(source='/assets/images/soda.png')"/>
				<s:Label text="Drink a cup of soda" styleName="optionLabel" width="380"/>
				<s:Group height="100%">
					<sharedView:AdherenceCheckBox id="sodaCheckBox" width="50" height="50" verticalCenter="-5"
											skinClass="collaboRhythm.plugins.schedule.shared.view.AdherenceCheckBoxSkin"
											click="checkBox_clickHandler(event)"/>
				</s:Group>
			</s:HGroup>
			<s:Label text="or" styleName="orLabel"/>
			<s:HGroup verticalAlign="middle">
				<s:Image source="@Embed(source='/assets/images/glucoseTablets.png')"/>
				<s:Label text="Take 4 glucose tablets" styleName="optionLabel" width="380"/>
				<s:Group height="100%">
					<sharedView:AdherenceCheckBox id="glucoseTabletsCheckBox" width="50" height="50" verticalCenter="-5"
											skinClass="collaboRhythm.plugins.schedule.shared.view.AdherenceCheckBoxSkin"
											click="checkBox_clickHandler(event)"/>
				</s:Group>
			</s:HGroup>
			<s:Button id="okButton" label="OK" click="okButton_clickHandler()"/>
		</s:VGroup>
	</s:Group>
</tablet:TabletViewBase>
