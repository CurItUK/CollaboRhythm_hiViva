<s:Panel
	title="Medical Equipment"
	skinClass="collaboRhythm.shared.view.skins.WidgetPanelSkin"
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:scroll="collaboRhythm.view.scroll.*"
	width="500" height="100%">
	<fx:Script>
		<![CDATA[
		import collaboRhythm.shared.controller.apps.WorkstationAppControllerBase;
		import collaboRhythm.shared.model.healthRecord.document.EquipmentModel;

		[Bindable]
		private var _equipmentModel:EquipmentModel;

		public function init(equipmentModel:EquipmentModel):void
		{
			_equipmentModel = equipmentModel;
		}

		protected function rawButton_clickHandler(event:MouseEvent):void
		{
			viewstack1.selectedIndex = (viewstack1.selectedIndex + 1) % viewstack1.length;
		}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!--		<healthRecord:EquipmentModel id="model"/> -->
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:ViewStack id="viewstack1" width="100%" height="100%">
		<s:NavigatorContent label="gridContent" width="100%" height="100%">
			<!--<mx:Image source="@Embed(source='/assets/images/equipment-watermark.png')" styleName="WidgetWatermarkImage" width="60%" height="60%" alpha="{WorkstationAppControllerBase.WIDGET_WATERMARK_ALPHA}" smoothBitmapContent="true"/>-->
			<scroll:TouchScrollingDataGrid id="widgetGrid" styleName="WidgetGrid" useHorizontalTouchScrolling="false" showHeaders="false" selectable="false" useRollOver="false" width="100%" height="100%" dataProvider="{_equipmentModel.equipmentCollection}">
				<scroll:columns>
					<mx:DataGridColumn headerText="Name" dataField="name" itemRenderer="collaboRhythm.shared.view.apps.WidgetGridItemRenderer"/>
					<!--<mx:DataGridColumn headerText="Date" dataField="date" width="100" itemRenderer="collaboRhythm.shared.view.apps.WidgetGridItemRenderer"/>-->
				</scroll:columns>
			</scroll:TouchScrollingDataGrid>
		</s:NavigatorContent>
		<s:NavigatorContent label="rawContent" width="100%" height="100%">
			<s:TextArea width="100%" height="100%" text="{_equipmentModel}"/>
		</s:NavigatorContent>
	</mx:ViewStack>
	<s:ToggleButton styleName="DebugToggleButton" label="Raw" id="rawButton" click="rawButton_clickHandler(event)" width="48" bottom="0" left="0" alpha="{WorkstationAppControllerBase.DEBUG_BUTTON_ALPHA}" visible="{WorkstationAppControllerBase.DEBUG_BUTTON_VISIBLE}"/>
</s:Panel>
