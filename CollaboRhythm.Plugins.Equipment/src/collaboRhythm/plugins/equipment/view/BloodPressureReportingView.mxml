			dispatchEvent(new ScheduleItemReportingViewEvent(ScheduleItemReportingViewEvent.ADHERENCE_ITEM_INCOMPLETE,
															 _scheduleItemOccurrence, _adherenceItem,
															 bloodPressureEmergencyView));
		}

