<hiviva:HivivaViewBase xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:hiviva="collaboRhythm.shared.view.hiviva.*"
					   xmlns:sharedViews="collaboRhythm.shared.view.*"
					   resize="resizeHandler()"
					   title="Select Record">

	<fx:Script><![CDATA[
		import collaboRhythm.hiviva.controller.HivivaApplicationController;

		override protected function createChildren():void
		{
			super.createChildren();
			if (_hivivaApplicationController && _activeAccount)
			{
				sharedRecordsListView.init(_hivivaApplicationController as HivivaApplicationController, _activeAccount);
			}
		}

		private function resizeHandler():void
		{
			if (width > height)
			{
				sharedRecordsListView.width = width * 0.5;
			}
			else
			{
				sharedRecordsListView.width = width;
			}
		}
		]]></fx:Script>
	<sharedViews:SharedRecordsListView id="sharedRecordsListView" height="100%"/>
</hiviva:HivivaViewBase>
