<?xml version="1.0" encoding="utf-8"?>
<view:FullScheduleItemViewBase name="MeasurementView"
							   xmlns:fx="http://ns.adobe.com/mxml/2009"
							   xmlns:s="library://ns.adobe.com/flex/spark"
							   xmlns:mx="library://ns.adobe.com/flex/mx"
 xmlns:view="collaboRhythm.workstation.apps.schedule.view.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		#description {
			font-size: 16;
			font-weight: bold;
		}
		
		#administration {
			font-size: 12;
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import collaboRhythm.workstation.apps.schedule.model.Measurement;
			import collaboRhythm.workstation.apps.schedule.model.MoveData;
			
			import mx.core.UIComponent;
			
			import spark.effects.Move;
			
			public static const MEDICATION_PICTURE_WIDTH:Number = 80;
			public static const MEDICATION_WIDTH:Number = 320;
			public static const MEDICATION_HEIGHT:Number = 82;
			
			[Bindable]
			private var _measurement:Measurement; 
			
			public function get measurement():Measurement
			{
				return _measurement;
			}
			
			public function set measurement(measurement:Measurement):void
			{
				_measurement = measurement;
				scheduleItem = measurement;
				this.width = MEDICATION_WIDTH;
				this.height = MEDICATION_HEIGHT;
			}
			
			override public function stackingUpdateHandler(stackingUpdated:Boolean):void
			{
				if (stackingUpdated == true)
				{
					super.stackingUpdateHandler(stackingUpdated);
				}
			}
		]]>
	</fx:Script>
	<s:Group id="measurementGroup" width="100%" height="100%">
		<s:Rect id="outerRectangle" width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="{uint(_measurement.collaborationColor)}" alpha="0.4"/>
			</s:fill>
			<s:stroke>
				<s:SolidColorStroke color="0xFFFFFF" weight="1" alpha="0.5"/>
			</s:stroke>
		</s:Rect>
		<mx:Image right="8" verticalCenter="0" source="@Embed(source='resources/images/icons/gripHorizontalNarrow.png')"/>
		<s:Group id="medicationContent" left="1" right="29" top="1" bottom="1">
			<s:Rect width="80" height="100%">
				<s:fill>
					<s:SolidColor color="0x000000"/>
				</s:fill>
			</s:Rect>
			<mx:Image source="{_measurement.imageURI}" width="{MEDICATION_PICTURE_WIDTH}" height="{MEDICATION_PICTURE_WIDTH}" smoothBitmapContent="true"/>
			<mx:Image source="@Embed(source='resources/images/apps/schedule/blood_pressure_measurement_widget.png')" smoothBitmapContent="true" left="57" top="4"/>
			<s:Label id="description" text="{_measurement.description}" left="83" right="1" maxDisplayedLines="1" y="7"/>	
			<s:Label id="indication" text="{_measurement.indication} - Dr. James King" left="83" right="1" maxDisplayedLines="1" y="30" fontSize="13"/>
			<s:Label id="administration" text="{_measurement.administration}" left="83" y="50" fontSize="13"/>
			<s:Label id="instructions" text="{_measurement.instructions}" left="83" y="64" fontSize="13"/>
		</s:Group>
	</s:Group>
</view:FullScheduleItemViewBase> 