<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx">
		<fx:Style>
			@namespace s "library://ns.adobe.com/flex/spark";

			.videoCount {
				color: #33ff33;
				font-size: 40;
			}

		</fx:Style>
	<fx:Script><![CDATA[
		import assets.images.videos;

		import collaboRhythm.plugins.videoMessages.controller.VideoMessagesAppController;
		import collaboRhythm.shared.model.VideoMessagesModel;

		import mx.binding.utils.BindingUtils;

		private var _videoMessagesAppController:VideoMessagesAppController;
		[Bindable]
		private var _videoMessagesModel:VideoMessagesModel;

		public function init(videoMessagesAppController:VideoMessagesAppController,
							 videoMessagesModel:VideoMessagesModel):void
		{
			_videoMessagesAppController = videoMessagesAppController;
			_videoMessagesModel = videoMessagesModel;

			BindingUtils.bindSetter(videoMessageCount_changeHandler, _videoMessagesModel, "videoMessageCount", false, true);
		}

		private function videoMessageCount_changeHandler(videoMessageCount:int):void
		{
			showFullViewButton.label = videoMessageCount.toString();
		}

		private function showFullViewButton_clickHandler():void
		{
			_videoMessagesAppController.dispatchShowFullView();
		}
		]]></fx:Script>
	<s:Button id="showFullViewButton" icon="{videos}" width="100" height="100" click="showFullViewButton_clickHandler()" skinClass="collaboRhythm.shared.view.IconButtonSkin" styleName="videoCount"/>
</s:Group>
